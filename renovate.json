{
  "extends": [
    "config:base",
    ":pinAllExceptPeerDependencies"
  ],
  "groupName": "all",
  "ignoreDeps": [
    "ora",
    "chalk"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "ignorePaths": [
    "**/node_modules/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**"
  ],
  "packageRules": [
    {
      "packageNames": [
        "graphql"
      ],
      "versionStrategy": "widen"
    }
  ]
}
